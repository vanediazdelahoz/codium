generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  STUDENT
  PROFESSOR
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum ChallengeStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum SubmissionStatus {
  QUEUED
  RUNNING
  ACCEPTED
  WRONG_ANSWER
  TIME_LIMIT_EXCEEDED
  RUNTIME_ERROR
  COMPILATION_ERROR
}

enum Language {
  PYTHON
  JAVA
  NODEJS
  CPP
}

enum TestCaseResultStatus {
  PASS
  FAIL
  TIMEOUT
  RUNTIME_ERROR
}

enum EvaluationStatus {
  DRAFT
  PUBLISHED
  CLOSED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  role      UserRole @default(STUDENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  submissions        Submission[]
  groupsEnrolled     GroupStudent[]
  coursesEnrolled    CourseStudent[]
  coursesProfessor   Course[]       @relation("CourseProfessors")
  createdChallenges  Challenge[]

  @@map("users")
}

model Course {
  id        String   @id @default(uuid())
  name      String
  code      String   @unique
  semester  String?  // e.g., "2024-II", "2025-I"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  professors User[]           @relation("CourseProfessors")
  students   CourseStudent[]
  groups     Group[]
  createdBy  String? // Profesor que creó el curso

  @@map("courses")
}

model Group {
  id          String   @id @default(uuid())
  courseId    String
  number      Int      // 1, 2, 3, etc. (Grupo 01, Grupo 02)
  name        String   // "Grupo 01", "Grupo 02", etc.
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  course      Course       @relation(fields: [courseId], references: [id], onDelete: Cascade)
  students    GroupStudent[]
  challenges  Challenge[]
  evaluations Evaluation[]
  submissions Submission[]

  @@unique([courseId, number])
  @@index([courseId])
  @@map("groups")
}

model GroupStudent {
  groupId    String
  studentId  String
  enrolledAt DateTime @default(now())

  group   Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  student User  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@id([groupId, studentId])
  @@map("group_students")
}

model CourseStudent {
  courseId   String
  studentId  String
  enrolledAt DateTime @default(now())

  course  Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  student User   @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@id([courseId, studentId])
  @@map("course_students")
}

model Challenge {
  id          String          @id @default(uuid())
  title       String
  description String
  difficulty  Difficulty
  tags        String[]
  timeLimit   Int             // milliseconds
  memoryLimit Int             // MB
  status      ChallengeStatus @default(DRAFT)
  groupId     String
  createdById String
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  group        Group                   @relation(fields: [groupId], references: [id], onDelete: Cascade)
  createdBy    User                    @relation(fields: [createdById], references: [id])
  testCases    TestCase[]
  submissions  Submission[]
  evaluations  EvaluationChallenge[]

  @@index([groupId])
  @@map("challenges")
}

model TestCase {
  id             String @id @default(uuid())
  challengeId    String
  input          String
  expectedOutput String
  isHidden       Boolean @default(false)
  points         Int     @default(10)
  order          Int

  challenge Challenge        @relation(fields: [challengeId], references: [id], onDelete: Cascade)
  results   TestCaseResult[]

  @@map("test_cases")
}

model Submission {
  id           String           @id @default(uuid())
  userId       String
  challengeId  String
  groupId      String
  evaluationId String?          // Opcional: para entregas en evaluación
  code         String
  language     Language
  status       SubmissionStatus @default(QUEUED)
  score        Int              @default(0)
  timeMsTotal  Int              @default(0)
  memoryUsedMb Float            @default(0)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  user       User              @relation(fields: [userId], references: [id])
  challenge  Challenge         @relation(fields: [challengeId], references: [id])
  group      Group             @relation(fields: [groupId], references: [id])
  evaluation Evaluation?       @relation(fields: [evaluationId], references: [id], onDelete: SetNull)
  results    TestCaseResult[]

  @@index([evaluationId])
  @@index([groupId])
  @@map("submissions")
}

model TestCaseResult {
  id           String                @id @default(uuid())
  submissionId String
  testCaseId   String
  status       TestCaseResultStatus
  timeMs       Int
  memoryMb     Float
  output       String?
  error        String?

  submission Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  testCase   TestCase   @relation(fields: [testCaseId], references: [id])

  @@map("test_case_results")
}

model Evaluation {
  id           String             @id @default(uuid())
  name         String
  description  String?
  groupId      String
  status       EvaluationStatus   @default(DRAFT)
  startDate    DateTime
  endDate      DateTime
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt

  group       Group                    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  challenges  EvaluationChallenge[]
  submissions Submission[]

  @@index([groupId])
  @@map("evaluations")
}

model EvaluationChallenge {
  id            String  @id @default(uuid())
  evaluationId  String
  challengeId   String
  order         Int

  evaluation Evaluation @relation(fields: [evaluationId], references: [id], onDelete: Cascade)
  challenge  Challenge  @relation(fields: [challengeId], references: [id], onDelete: Cascade)

  @@unique([evaluationId, challengeId])
  @@index([challengeId])
  @@map("evaluation_challenges")
}